{
  "name": "universal-glob",
  "version": "1.0.0",
  "description":
    "drop-in replacement for glob lets you use promises or callbacks.",
  "author": {
    "name": "Buster Collings",
    "email": "busterc@gmail.com",
    "url": "https://about.me/buster"
  },
  "files": ["lib"],
  "main": "lib/index.js",
  "keywords": [
    "directories",
    "dirs",
    "expand",
    "files",
    "fnmatch",
    "folders",
    "glob",
    "glob-promise",
    "globbing",
    "globs",
    "globby",
    "match",
    "matcher",
    "minimatch",
    "paths",
    "promise",
    "promisify",
    "universal",
    "universalify",
    "wildcard",
    "wildcards"
  ],
  "reveal": true,
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "nvx": "^1.0.1",
    "prettier": "^1.7.0"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "busterc/universal-glob",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "ISC",
  "dependencies": {
    "glob": "latest",
    "universalify": "^0.1.1"
  }
}
