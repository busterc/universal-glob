{
  "name": "universal-glob",
  "description": "drop-in replacement for glob lets you use promises or callbacks.",
  "license": "ISC",
  "author": "Buster Collings <busterc@gmail.com> (https://about.me/buster)",
  "repository": "busterc/universal-glob",
  "version": "1.0.1",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "test": "jest --coverage"
  },
  "dependencies": {
    "glob": "latest",
    "universalify": "^0.1.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-xo": "^0.24.2",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "lint-staged": "^9.0.1",
    "nsp": "^3.2.1",
    "nvx": "^1.0.2",
    "prettier": "^1.14.2",
    "prettier-package-json": "^2.0.0"
  },
  "keywords": [
    "directories",
    "dirs",
    "expand",
    "files",
    "fnmatch",
    "folders",
    "glob",
    "glob-promise",
    "globbing",
    "globby",
    "globs",
    "match",
    "matcher",
    "minimatch",
    "paths",
    "promise",
    "promisify",
    "universal",
    "universalify",
    "wildcard",
    "wildcards"
  ],
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier",
      "json"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "__tests__"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "reveal": true
}
